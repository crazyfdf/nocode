{
  "name": "nocode",
  "version": "0.7.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "electron . | next dev",
    "serve": "next dev",
    "build": "next build",
    "start": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "commit": "git-cz",
    "lint": "yarn lint:eslint && yarn lint:css",
    "lint:eslint": "eslint --ext ts,tsx .",
    "lint:css": "stylelint **/*.{ts,tsx}",
    "lint:fix": "eslint --fix --ext ts,tsx .",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "tsc:client": "tsc --noEmit -p tsconfig.json",
    "bump-version": "standard-version --skip.commit --skip.tag",
    "lerna": "lerna publish"
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
    "@cloudbase/node-sdk": "^2.6.0",
    "@emotion/css": "^11.1.3",
    "@headlessui/react": "^1.3.0",
    "@heroicons/react": "^1.0.1",
    "@next/bundle-analyzer": "^11.1.2",
    "antd": "^4.16.6",
    "autoprefixer": "^10.2.6",
    "axios": "^0.21.1",
    "babel-plugin-import": "^1.13.3",
    "codemirror": "^5.62.2",
    "cross-env": "^7.0.3",
    "electron": "^13.1.4",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.0",
    "enquire-js": "^0.2.1",
    "express": "^4.17.1",
    "globby": "^11.0.4",
    "lodash": "^4.17.21",
    "next": "11.0.1",
    "postcss": "^8.3.5",
    "rc-queue-anim": "^1.8.5",
    "rc-texty": "^0.2.0",
    "rc-tween-one": "^2.7.3",
    "react": "17.0.2",
    "react-codemirror2": "^7.2.1",
    "react-color": "^2.19.3",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "redux-devtools-extension": "^2.13.9",
    "sass": "^1.35.2",
    "tailwindcss": "^2.2.4",
    "vue-docgen-api": "^4.40.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^15.12.5",
    "@types/react": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "11.0.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-jsx-control-statements": "^2.2.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "http-proxy-middleware": "^2.0.1",
    "husky": "^4.2.5",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "standard-version": "^9.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.3.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --config .commitlintrc.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && yarn tsc && git add ."
    }
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "stylelint",
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,less,scss}": [
      "stylelint",
      "prettier --write"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  }
}